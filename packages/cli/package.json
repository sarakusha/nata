{
  "name": "@nibus/cli",
  "version": "3.2.2",
  "description": "Nata-Info NiBUS",
  "keywords": [
    "nata-info",
    "nibus",
    "sarakusha"
  ],
  "main": "lib/service/index.js",
  "types": "lib/service/index.d.ts",
  "scripts": {
    "type-check": "tsc --noEmit",
    "service": "cross-env NODE_ENV=production DEBUG=nibus:*,-nibus:decoder pm2 --name=nibus.service start lib/service/daemon.js",
    "build": "cross-env BABEL_ENV=production yarn clean && tsc && shx chmod a+x lib/index.js",
    "compile": "cross-env NODE_ENV=development tsc",
    "clean": "shx rm -rf lib tsconfig.tsbuildinfo",
    "lint": "eslint -c ../../.eslintrc-prod.js --ext .js,.ts,.tsx src/",
    "lint:fix": "eslint -c ../../.eslintrc-prod.js --ext .js,.ts,.tsx --fix src/"
  },
  "bin": {
    "nibus": "lib/index.js"
  },
  "author": "Andrei Sarakeev <avs@nata-info.ru>",
  "license": "MIT",
  "directories": {
    "lib": "lib"
  },
  "files": [
    "lib",
    "assets",
    "!**/*.spec.*",
    "CHANGELOG.md",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/sarakusha/nibus.git",
    "directory": "packages/cli"
  },
  "bugs": {
    "url": "https://github.com/sarakusha/nibus/issues"
  },
  "devDependencies": {
    "@types/bonjour": "^3.5.8",
    "@types/configstore": "^5.0.0",
    "@types/debug": "^4.1.0",
    "@types/jest-diff": "^24.3.0",
    "@types/js-yaml": "^4.0.0",
    "@types/lodash": "^4.14.149",
    "@types/mdns": "^0.0.33",
    "@types/progress": "^2.0.3",
    "@types/serialport": "^8.0.0",
    "@types/tail": "^2.0.0",
    "@types/xdg-basedir": "^4.0.2",
    "@types/yargs": "^16.0.0",
    "babel-plugin-transform-imports": "^2.0.0"
  },
  "dependencies": {
    "@nibus/core": "3.2.2",
    "@serialport/bindings": "^9.0.1",
    "bonjour-hap": "^3.6.2",
    "chalk": "^4.1.0",
    "cli-table3": "^0.6.0",
    "configstore": "^6.0.0",
    "debug": "^4.1.0",
    "electron-log": "^4.0.4",
    "fp-ts": "^2.4.1",
    "io-ts": "^2.0.5",
    "io-ts-types": "^0.5.5",
    "js-yaml": "^4.0.0",
    "lodash": "^4.17.10",
    "monocle-ts": "^2.0.1",
    "newtype-ts": "^0.3.2",
    "pm2": "^4.2.2",
    "progress": "^2.0.3",
    "serialport": "^9.0.1",
    "table-layout": "^1.0.0",
    "tail": "^2.0.2",
    "tiny-typed-emitter": "^2.0.3",
    "usb-detection": "^4.5.0",
    "yargs": "^17.0.1"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/__tests__/*.+[tj]sx?",
      "**/src/**/*.spec.+[tj]sx?"
    ]
  },
  "pkg": {
    "scripts": "lib/**/*.js",
    "assets": "assets/**"
  },
  "sideEffects": false,
  "publishConfig": {
    "access": "public"
  }
}
